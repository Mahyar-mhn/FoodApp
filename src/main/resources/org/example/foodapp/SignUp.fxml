<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #638C6D;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.foodapp.SignUp">
    <children>
        <!-- Centered Content Box -->
        <VBox alignment="CENTER" layoutX="200.0" layoutY="50.0" prefHeight="400.0" prefWidth="500.0" spacing="20.0" style="-fx-background-color: #E7FBB4;                      -fx-border-color: #DF6D2D;                      -fx-border-width: 3;                      -fx-border-radius: 15;                      -fx-background-radius: 15;                      -fx-effect: dropshadow(gaussian, #C84C05, 15, 0.5, 0, 5);                      -fx-padding: 30;" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0">
            <children>
                <!-- Title -->
                <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #638C6D;" text="Create Your Account" />

                <!-- Name Field -->
                <VBox spacing="5.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Name:" />
                    <TextField fx:id="name_txtfield" promptText="Enter your name" style="-fx-border-color: #C84C05;                                       -fx-border-radius: 10;                                       -fx-background-radius: 10;                                       -fx-background-color: #DF6D2D;                                       -fx-text-fill: white;                                       -fx-padding: 10;                                       -fx-font-size: 14px;" />
                </VBox>

                <!-- Phone Field -->
                <VBox spacing="5.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Phone:" />
                    <TextField fx:id="phone_txtfield" promptText="Enter your phone number" style="-fx-border-color: #C84C05;                                       -fx-border-radius: 10;                                       -fx-background-radius: 10;                                       -fx-background-color: #DF6D2D;                                       -fx-text-fill: white;                                       -fx-padding: 10;                                       -fx-font-size: 14px;" />
                </VBox>

                <!-- Password Field -->
                <VBox spacing="5.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Password:" />
                    <PasswordField fx:id="password_txtfield" promptText="Enter your password" style="-fx-border-color: #C84C05;                                           -fx-border-radius: 10;                                           -fx-background-radius: 10;                                           -fx-background-color: #DF6D2D;                                           -fx-text-fill: white;                                           -fx-padding: 10;                                           -fx-font-size: 14px;" />
                </VBox>

                <!-- Confirm Password Field -->
                <VBox spacing="5.0">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Confirm Password:" />
                    <PasswordField fx:id="confirm_password_txtfield" promptText="Confirm your password" style="-fx-border-color: #C84C05;                                           -fx-border-radius: 10;                                           -fx-background-radius: 10;                                           -fx-background-color: #DF6D2D;                                           -fx-text-fill: white;                                           -fx-padding: 10;                                           -fx-font-size: 14px;" />
                </VBox>

                <!-- Sign Up Button -->
                <Button fx:id="signup_button" prefWidth="200.0" style="-fx-background-color: #638C6D;                                -fx-text-fill: white;                                -fx-font-size: 16px;                                -fx-font-weight: bold;                                -fx-border-radius: 20;                                -fx-background-radius: 20;                                -fx-padding: 10;                                -fx-effect: dropshadow(gaussian, #C84C05, 10, 0.3, 0, 4);" text="Sign Up" />
            </children>
        </VBox>
    </children>
</AnchorPane>
