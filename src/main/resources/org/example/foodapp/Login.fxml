<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.foodapp.Login" style="-fx-background-color: #638C6D;">
   <children>
      <VBox alignment="CENTER" layoutX="250.0" layoutY="100.0" prefHeight="400.0" prefWidth="400.0" spacing="20.0"
            style="-fx-background-color: #E7FBB4;
                   -fx-border-color: #DF6D2D;
                   -fx-border-width: 3;
                   -fx-border-radius: 20;
                   -fx-background-radius: 20;
                   -fx-effect: dropshadow(gaussian, #C84C05, 15, 0.5, 0, 5);
                   -fx-padding: 30;">
         <children>
            <!-- Title -->
            <Label text="Welcome Back!" alignment="CENTER" style="-fx-text-fill: #638C6D;">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>

            <!-- Username Field -->
            <TextField fx:id="username_txtfield" promptText="Enter your username"
                       style="-fx-font-size: 16px;
                              -fx-padding: 10;
                              -fx-border-radius: 10;
                              -fx-background-radius: 10;
                              -fx-background-color: #DF6D2D;
                              -fx-text-fill: white;
                              -fx-border-color: #C84C05;" />

            <!-- Password Field -->
            <PasswordField fx:id="pass_textfield" promptText="Enter your password"
                           style="-fx-font-size: 16px;
                                  -fx-padding: 10;
                                  -fx-border-radius: 10;
                                  -fx-background-radius: 10;
                                  -fx-background-color: #DF6D2D;
                                  -fx-text-fill: white;
                                  -fx-border-color: #C84C05;" />

            <!-- Login Button -->
            <Button fx:id="login_submit_button" text="Login"
                    style="-fx-background-color: #638C6D;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-padding: 10;
                           -fx-border-radius: 10;
                           -fx-background-radius: 10;
                           -fx-effect: dropshadow(gaussian, #C84C05, 10, 0.3, 0, 4);"
                    prefWidth="200.0" />

            <!-- Sign Up Link -->
            <Label text="Don't have an account?" style="-fx-text-fill: #C84C05; -fx-font-size: 14px;" />
            <Button fx:id="signup_link_button" text="Sign Up"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: #638C6D;
                           -fx-font-size: 14px;
                           -fx-underline: true;" />
         </children>
      </VBox>
   </children>
</AnchorPane>
